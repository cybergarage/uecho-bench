uechos=(
"uecho"
"uecho-rs"
"uecho-go"
"uecho-py"
)

########################################
# Clone
########################################

for n in {0..3}
do
    uechodir=${uechos[$n]}
    rm -rf ${uechodir}
    giturl="https://github.com/cybergarage/${uechos[$n]}"
	git clone ${giturl}
done

########################################
# Benchmark
########################################

build_cmds=(
"./bootstrap && ./configure --enable-examples && make -j 20"
"cargo build"
"make install"
"pip3 install -r requirements.txt"
)

run_cmds=(
"./examples/controller/uechobench/unix/uechobench -v -n 100"
"make bench"
"~/go/bin/uechobench -n 100"
"env PYTHONPATH=`pwd` bin/uechobench -v -n 100"
)

for n in {0..3}
do     
    uechodir=${uechos[$n]}
	pushd ${uechodir}
	eval ${build_cmds[$n]}
	eval time ${run_cmd}
    popd
done
